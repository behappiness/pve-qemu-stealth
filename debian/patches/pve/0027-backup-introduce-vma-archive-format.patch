+static VMAObjectState *vma_by_id(const char *name)
+{
+    Object *container;
+    Object *obj;
+
+    container = object_get_objects_root();
+    obj = object_resolve_path_component(container, name);
+
+    return VMA_OBJECT(obj);
+}
